{
  "name": "@matthew-hre/env",
  "type": "module",
  "version": "0.2.0",
  "description": "Type safe environment variable validation for NextJS projects",
  "author": "Matthew Hrehirchuk",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "zod",
    "env",
    "typed",
    "validation"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch --dts",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint ."
  },
  "dependencies": {
    "picocolors": "^1.1.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "eslint-plugin-format": "^1.0.2",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
